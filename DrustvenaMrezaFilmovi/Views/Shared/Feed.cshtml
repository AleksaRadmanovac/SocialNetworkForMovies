@model dynamic

@if(Model.Recenzije == null)
{
    <div style="height: 84vh">
        <h2 class="mt-2">Nema dostupnih recenzija na vasem zidu</h2>
    </div>
   
}
else {
@foreach (Recenzija item in Model.Recenzije) {
    <div class="card border-primary mb-2 mt-2 mx-auto" style="max-width: 32rem;">
        <div class="card-header text-start" >
            <a href="@Url.Action("Details", "Korisnik", new { id = item.Korisnik.Id })" class="">@Html.DisplayFor(modelItem => item.Korisnik.Username)</a>
         </div>
        <div class="card-body">
            <h4 class="card-title text-start">
                <a href="@Url.Action("Details", "Film", new { id = item.Film.Id })">@Html.DisplayFor(modelItem => item.Film.Naziv)</a>
            </h4>
            <p class="card-text text-start"> @Html.DisplayFor(modelItem => item.Komentar)</p>
            <div class="progress">

                <div class="progress-bar" role="progressbar" style="width: @item.BrojZvezdica%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>

            </div><span class="text-end">@Html.DisplayFor(modelItem => item.BrojZvezdica)% rating</span>
            <h6 class="text-end">@Html.DisplayFor(modelItem => item.VremeNastanka)</h6>
        </div>
    </div>
         
}
}
